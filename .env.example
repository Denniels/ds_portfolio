# Variables de entorno para el portafolio de Data Science
# Renombrar a .env para uso local o configurar directamente en Cloud Run

# Configuración de Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=credentials/analicis-demografico-0fa332bfc9a7.json

# Configuración de APIs
API_KEY=your_api_key_here
DATOS_GOB_CL_API_URL=https://datos.gob.cl/api/3/action/datastore_search

# Configuración de caché
CACHE_TTL=3600

# Configuración de Streamlit
STREAMLIT_SERVER_PORT=8080
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200

# Database Configuration (si es necesario)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ds_portfolio

# PostgreSQL Configuration (si es necesario)
POSTGRES_DB=ds_portfolio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Configuración de logging
LOG_LEVEL=INFO
